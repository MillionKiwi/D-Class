# ============================================
# D-Class 환경변수 예제 파일
# ============================================
# 이 파일을 복사하여 .env.development 또는 .env.production 파일을 생성하세요
# 실제 값은 각 환경에 맞게 수정해주세요

# ============================================
# API 설정
# ============================================
# 백엔드 API 서버 주소
VITE_API_BASE_URL=http://localhost:8080/api

# API 요청 타임아웃 (밀리초)
VITE_API_TIMEOUT=10000

# ============================================
# 앱 정보
# ============================================
# 환경 구분 (development, staging, production)
VITE_APP_ENV=development

# 앱 이름
VITE_APP_NAME=D-Class

# 앱 버전 (package.json과 동일하게 유지)
VITE_APP_VERSION=1.0.0

# ============================================
# 파일 업로드 설정
# ============================================
# 최대 파일 크기 (바이트 단위, 기본값: 10MB = 10485760)
VITE_MAX_FILE_SIZE=10485760

# 허용 파일 타입 (쉼표로 구분)
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# 이미지 최대 해상도 (프로필 이미지)
VITE_MAX_IMAGE_WIDTH=1024
VITE_MAX_IMAGE_HEIGHT=1024

# ============================================
# 기능 설정
# ============================================
# 무한 스크롤 페이지당 아이템 수
VITE_ITEMS_PER_PAGE=20

# 페이지네이션 페이지당 아이템 수
VITE_PAGINATION_SIZE=30

# 검색 디바운스 시간 (밀리초)
VITE_SEARCH_DEBOUNCE=500

# API 응답 캐시 시간 (밀리초, 5분 = 300000)
VITE_CACHE_DURATION=300000

# 토스트 메시지 표시 시간 (밀리초)
VITE_TOAST_DURATION=3000

# ============================================
# 인증 설정
# ============================================
# JWT 토큰 로컬 스토리지 키
VITE_AUTH_TOKEN_KEY=d-class-auth-token

# 리프레시 토큰 로컬 스토리지 키
VITE_REFRESH_TOKEN_KEY=d-class-refresh-token

# 토큰 만료 전 갱신 시간 (분)
VITE_TOKEN_REFRESH_BEFORE=5

# ============================================
# 디버그 및 개발 설정
# ============================================
# 디버그 모드 활성화
VITE_DEBUG_MODE=true

# API 요청/응답 로깅
VITE_LOG_API=true

# 콘솔 로그 레벨 (debug, info, warn, error)
VITE_LOG_LEVEL=debug

# ============================================
# 외부 서비스 (선택사항)
# ============================================
# Google Maps API Key (학원 위치 표시용)
VITE_GOOGLE_MAPS_API_KEY=

# Firebase 설정 (푸시 알림용, 선택사항)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# ============================================
# PWA 설정
# ============================================
# Service Worker 활성화
VITE_ENABLE_PWA=true

# 오프라인 모드 활성화
VITE_ENABLE_OFFLINE=true
